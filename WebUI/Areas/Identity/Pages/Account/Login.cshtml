<body>
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 flex-center g-0">
                <div class="col-lg-8 col-xxl-5 py-3 position-relative">
                    <img class="bg-auth-circle-shape" src="../../../../theme/assets/img/icons/spot-illustrations/bg-shape.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="../../../../theme/assets/img/icons/spot-illustrations/shape-1.png" alt="" width="150">
                    <div class="card overflow-hidden z-index-1">
                        <div class="card-body p-0">
                            <div class="row g-0 h-100">
                                <div class="col-md-5 text-center bg-card-gradient">
                                    <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                        <div class="bg-holder bg-auth-card-shape" style="background-image:url(../../../../theme/assets/img/icons/spot-illustrations/half-circle.png);"></div>
                                        <!--/.bg-holder-->
                                        <div class="z-index-1 position-relative">
                                            <a class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder" href="/Home">Powersee</a>
                                            <p class="opacity-75 text-white">Powersee'in gücüyle, personel vardiya takibinizi zahmetsizce yönetebilir, sadece iş süreçlerinize odaklanabilirsiniz.
                                            </p>
                                            <p>Arayüz tasarımını bize bırakın, siz işinizi geliştirin!</p>
                                        </div>
                                    </div>
                                    <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                        <p class="text-white">Hesabınız yok mu?<br><a class="text-decoration-underline link-light" href="register">Ücretsiz oluştur!</a></p>
                                                            </div>
                                </div>
                                <div class="col-md-7 d-flex flex-center">
                                    <div class="p-4 p-md-5 flex-grow-1">
                                        <div class="row flex-between-center">
                                            <div class="col-auto">
                                                <h3>Oturum Aç</h3>
                                            </div>
                                        </div>
                                        <form method="post">
                                            @Html.AntiForgeryToken()
                                            <div asp-validation-summary="All" class="text-danger"></div>

                                            <div class="mb-3">
                                                <label class="form-label" asp-for="Input.Email">E-Posta</label>
                                                <input class="form-control" asp-for="Input.Email" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>

                                            <div class="mb-3">
                                                <div class="d-flex justify-content-between">
                                                    <label class="form-label" asp-for="Input.Password">Parola</label>
                                                </div>
                                                <input class="form-control" asp-for="Input.Password" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>

                                            <div class="row flex-between-center">
                                                <div class="col-auto">
                                                    <div class="form-check mb-0">
                                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                                        <label class="form-check-label mb-0" asp-for="Input.RememberMe">Oturumumu açık tut</label>
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <a class="fs--1" asp-page="./ForgotPassword">Şifremi Unuttum</a>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <button class="btn btn-primary d-block w-100 mt-3" type="submit">GİRİŞ</button>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main><!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->

    
