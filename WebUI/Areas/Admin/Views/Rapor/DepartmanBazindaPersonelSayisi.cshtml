@using WebUI.Areas.Admin.Models.Rapor
@model DepartmanBazindaPersonelSayisiDto
@{
    Layout = null;

}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<div class="modal show" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal modal-xl" role="document">
        <div class="modal-content">
            <div id="screenshotDiv">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Departman Bazında Çalışan Sayıları</h5><button class="btn-close" onclick="zuraf.closeModal('#editModal')" type="button" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">

                    <div class="col-lg-12 pe-lg-2 mb-3">
                        <div class="card h-lg-100">
                            <div class="card-body p-0">
                                @foreach (var item in Model.Liste)
                                {
                                    <div class="row g-0 align-items-center py-2 position-relative border-bottom border-200">
                                        <div class="col ps-x1 py-1 position-static">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-xl me-3">
                                                    <div class="avatar-name rounded-circle bg-soft-primary text-dark"><span class="fs-0 text-primary">@item.BirimAdi.Substring(0, 1)</span></div>
                                                </div>
                                                <div class="flex-1">
                                                    <h6 class="mb-0 d-flex align-items-center"><a class="text-800 stretched-link" href="#!">@item.BirimAdi</a></h6>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col py-1">
                                            <div class="row flex-end-center g-0">
                                                <div class="col-auto pe-2">
                                                    <div class="fs--1 fw-semi-bold">@item.Count</div>
                                                </div>
                                                <div class="col-5 pe-x1 ps-2">
                                                    <div class="progress bg-200 me-2" style="height: 5px;">
                                                        <div class="progress-bar rounded-pill" role="progressbar" style="width: @(item.Count * 10)%" aria-valuenow="@item.Count" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button onclick="zuraf.closeModal('#editModal')" class="btn btn-secondary btn-sm" type="button" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
